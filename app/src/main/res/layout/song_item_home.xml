<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_102sdp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView

            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/small_cover" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_8sdp"
            android:layout_toRightOf="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_20sdp"
                android:id="@+id/tv_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/solomon_sans_bold"
                tools:text="Ghashang Shod" />

            <TextView
                android:id="@+id/tv_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/solomon_sans_bold"
                tools:text="Hamid Hiraad" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="@dimen/margin_8sdp"
            android:layout_toEndOf="@id/container"
            android:layout_alignBottom="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/solomon_sans_bold"
                android:gravity="center"
                android:textAlignment="center"
                app:drawableStartCompat="@drawable/ic_baseline_eye"
                tools:text="520.5 K" />

            <TextView
                android:layout_marginStart="@dimen/margin_16sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/solomon_sans_bold"
                android:gravity="center"
                android:textAlignment="center"
                tools:text="05:23" />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>